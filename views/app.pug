extends layout

block content
    ul#flashmsg
        if flashmsg
            li(class=flashmsg.type)= flashmsg.msg
    ul#descriptorList
      each d in descriptorsList
        li(data-name=d)= d.substr("craftech".length)
    div#mainContainer
        ul#contentList
        div#contentEdition
            h3 Click on a descriptor to start editing...
        ul#resourceList
        datalist#resourcesImg
        datalist#resourcesModel
    form#resForm
        input#resUpload(type="file", name="file", multiple)

    script(src="/localDataManager.js")
    script(src="/formUtils.js")
    script(src="/io.client.js")
    script(src="/client.js")
    script(src="/flash.js")
